<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/clue_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8sp">

        <RelativeLayout
            android:id="@+id/clueLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/coldBlue">

            <TextView
                android:id="@+id/clue_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="Connect Internet"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <LinearLayout
                android:id="@+id/time_levels"
                android:layout_below="@id/clue_text"
                android:padding="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 1: 5 mins"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 2: 10 mins"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/level3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level 3: 15 mins"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <Button
                android:id="@+id/hintButton"
                android:layout_width="100sp"
                android:layout_height="35sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/clue_text"
                android:layout_margin="8sp"
                android:background="@drawable/hint_button"
                android:elevation="7sp"
                android:gravity="center"
                android:padding="5sp"
                android:fontFamily="@font/capriola"
                android:text="Hint"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/hint_view"
        android:layout_below="@id/clue_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/cardBackground"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola"
                android:text="Hint"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/hintTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hint is (take from firebase)"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
