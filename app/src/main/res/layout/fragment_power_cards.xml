<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PowerCardsFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#D50000"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="#FFFF00"
                android:layout_margin="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="0dp"
                    android:background="#D50000"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+2"
                    android:textSize="40dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Price: 20 points"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/plusTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Buy"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#01579B"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:background="#64DD17"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:layout_height="0dp"
                        android:background="#01579B"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="+4"
                        android:textColor="@android:color/black"
                        android:textSize="40dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:text="Price: 30 points"
                        android:textSize="24dp"/>

                    <TextView
                        android:id="@+id/plusFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Buy"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rightBackAtYa"
                android:background="#311B92"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:background="#01579B"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:layout_height="0dp"
                        android:background="#311B92"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Right Back At Ya!"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:text="Price: 35 points"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Buy"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#4A148C"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:background="#CE93D8"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:layout_height="0dp"
                        android:background="#4A148C"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Unlock a clue"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:layout_height="0dp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:text="Price: 40 points"
                        android:textSize="24dp"/>

                    <TextView
                        android:id="@+id/unlockClue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Buy"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>

