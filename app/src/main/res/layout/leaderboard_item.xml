<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leaderboard_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/leaderboardItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/leaderboard_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/leaderboard_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:text="Aman Agrawal and Prathmesh Talekar"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/leaderboard_item_applied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/leaderboard_item_name"
            android:textColor="@color/transparent_black" />

        <TextView
            android:id="@+id/leaderboard_item_clues_solved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>